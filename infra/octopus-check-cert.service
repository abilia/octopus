[Unit]
Description=Check certificate for myabilia.com with shell2http
After=network.target

[Service]
User=nobody
ExecStart=/usr/local/bin/shell2http -host <host-ip> -port 3001 /check-cert "echo | openssl s_client -servername <servername> -connect <server>:443 2>/dev/null | openssl x509 -noout -dates"
Restart=on-failure

[Install]
WantedBy=multi-user.target